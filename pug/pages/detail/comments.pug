section.comments-section
  .main-full.head-section
    h2 Комментарии
  .main-grid
    .col-6.col-md-12.col-xs-12
      h3 Спискок комментариев
      +commentsItem('ALex')
      +commentsItem('Dave')
      .comments-navigation
        .prev-btn
          i 
          span Предыдущие комментарии
        .next-btn
          span Следущие комментарии
          i
    .col-6.col-md-12.col-xs-12
      .comments-form-head
        h3 Оставьте свой отзыв
        .comments-stars
          .stars-ico.active(data-index="1")
          .stars-ico.active(data-index="2")
          .stars-ico(data-index="3")
          .stars-ico(data-index="4")
          .stars-ico(data-index="5")
      .comments-form
        form
          .input-box
            +inputTextarea('Ваше сообщение')
          .input-box
            +inputSubmit('Оставить отзыв', 'btn--gold') 
